
<div role="tabpanel">

  <!-- Nav tabs -->
  <div class ="nav-edit-center">
    <ul class="nav nav-tabs" role="tablist">
      <li role="presentation" class="<%= 'active' if !params[:shifts]%>"><a href="#workers" aria-controls="workers" role="tab" data-toggle="tab">Workers</a></li>
      <li role="presentation" class="<%= 'active' if params[:shifts]%>"><a href="#shifts" aria-controls="shifts" role="tab" data-toggle="tab">Shifts</a></li>
    </ul>
  </div>
  <!-- Tab panes -->
  <div class="tab-content">

    <div role="tabpanel" class="tab-pane <%= 'active' if !params[:shifts]%>" id="workers">
      <p id="notice"><%= notice %></p>

      <h1>Workers</h1>
      <%= link_to 'Add a Worker', new_worker_path, class:'btn btn-success add-a-worker' %>
      <table>
        <thead>
          <tr>
            <th>First name</th>
            <th>Status</th>
            <th>Price base</th>
            <th>Number of Shifts</th>
            <th>Total Price</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @workers.each do |worker| %>
            <tr>
              <td><%= worker.first_name %></td>
              <td><%= worker.status %></td>
              <td><%= worker.base_price %> €</td>
              <td><%= worker.shifts_count %></td>
              <td><%= worker.price %> €</td>
              <td><%= link_to 'Show', worker %></td>
              <td><%= link_to 'Edit', edit_worker_path(worker) %></td>
              <td><%= link_to 'Destroy', worker, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>
    </div>
    <div role="tabpanel" class="tab-pane <%= 'active' if params[:shifts]%>" id="shifts">
      <p id="notice"><%= notice %></p>

      <h1>Shifts</h1>
      <%= link_to 'Add a Shift', new_shift_path, class:'btn btn-success add-a-worker' %>
      <table>
        <thead>
          <tr>
            <th>Start Date</th>
            <th>Worker</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @shifts.each do |shift| %>
            <tr>
              <td><%= shift.start_date %></td>
              <td><%= shift.worker.first_name %></td>
              <td><%= link_to 'Destroy', shift, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>
    </div>
  </div>
</div>






